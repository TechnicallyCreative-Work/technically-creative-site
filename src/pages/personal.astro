---
import Layout from '~/layouts/PageLayout.astro';
import Header from '~/components/widgets/Header.astro';

import Hero from '~/components/widgets/Hero.astro';
import Content from '~/components/widgets/Content.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Steps from '~/components/widgets/Steps.astro';

const metadata = {
  title: 'Personal — Kenny Dunn',
};

const links = [
  { text: 'Home', href: '/' },
  { text: 'Services', href: '/services' },
  { text: 'About', href: '/about' },
  { text: 'Personal', href: '/personal' },
  { text: 'Contact', href: '/contact' },
];
---

<Layout metadata={metadata}>
  <Fragment slot="header">
    <Header links={links} isSticky showToggleTheme />
  </Fragment>

  <!-- Hero -->
  <Hero
    id="hero"
    title="Kenneth Dunn"
    tagline="Agile Product & Project Manager | Music Technologist"
    actions={[{ variant: 'primary', text: 'Get in touch', href: '/contact' }]}
  >
    <Fragment slot="subtitle">
      Agile Product & Project Manager with an M.S. in Music Technology and PMP certification. I specialize
      in bridging artist-centric goals with technical execution. With 12+ years in music production, hands-on experience
      building generative AI tools, and a proven track record of workflow automation, I deliver clarity, efficiency, and
      creativity for teams.
    </Fragment>
  </Hero>

  <!-- Professional Summary -->
  <Content
    id="summary"
    title="Professional Summary"
    items={[
      {
        title: 'Overview',
        description: `I combine expertise in Agile product management, Lean Six Sigma, and music technology to help teams deliver structured, creative projects. I've engineered Salesforce automations saving 30+ hours/month for a 120-person team, and I’ve led 100+ projects spanning software implementation, process optimization, and growth strategy.`,
      },
    ]}
  />

  <!-- Work Experience -->
  <Steps
    id="experience"
    title="Professional Experience"
    items={[
      {
        title: 'Strategic Manager of Business Excellence — Envita Solutions Inc. (2018–Present)',
        description: `Product Owner for B2B Salesforce ecosystem (100+ employees). Built automated proposal + site visit logging flows, saving 30+ hours/month. Led 18-month transformation portfolio of 100+ projects, identifying $600k potential savings via Lean Six Sigma.`,
        icon: 'tabler:briefcase',
      },
      {
        title: 'Senior Program Manager — Envita Solutions Inc. (2020–2023)',
        description: `Managed 6 Program Managers, doubling portfolio from $1M to $2M. Delivered Zero Waste to Landfill certification at 4 facilities. Mentored new hires and scaled program practices.`,
        icon: 'tabler:briefcase',
      },
      {
        title: 'Program Manager — Envita Solutions Inc. (2018–2020)',
        description: `Exceeded contract goals by 15%. Formalized best practices via Knowledge Sharing Committee. Delivered client projects across North America.`,
        icon: 'tabler:briefcase',
      },
      {
        title: 'Project Manager — Hamilton Exhibits (2015–2017)',
        description: `Led projects up to $500k budget. Introduced new PM software (Exhibit Force). Served on web/marketing committee for digital presence overhaul.`,
        icon: 'tabler:briefcase',
      },
    ]}
    classes={{ container: 'max-w-3xl' }}
  />

  <!-- Key Projects -->
  <Content
    id="projects"
    title="Key Music Technology Projects"
    items={[
      {
        title: 'Generative Music AI — IU Indianapolis',
        description: `Built core Max/MSP logic connecting Markov chain model to MIDI. Mentored peers on implementation. Demonstrated how AI can augment human creativity in composition.`,
      },
    ]}
  />

  <!-- Education -->
  <Steps
    id="education"
    title="Education"
    items={[
      {
        title: `Master of Science, Music Technology — IU Indianapolis (In progress, GPA 4.0, May 2025)`,
        icon: 'tabler:school',
      },
      {
        title: `Bachelor of Science, Organizational Leadership & Supervision — IUPUI (2011)`,
        icon: 'tabler:school',
      },
    ]}
    classes={{ container: 'max-w-3xl' }}
  />

  <!-- Certifications -->
  <Content
    id="certs"
    title="Certifications & Professional Development"
    items={[
      {
        title: 'Project Management Professional (PMP)',
        description: 'PMI | Active through Feb 2027',
      },
      {
        title: 'Lean Six Sigma Greenbelt',
        description: 'Expected Completion Aug 2025',
      },
      {
        title: 'Agile Basics Training',
        description: 'DataArt | Completed Mar 2025',
      },
    ]}
  />

  <!-- CTA -->
  <CallToAction
    title="Let’s work together"
    subtitle="Bridging creative vision with structured delivery."
    actions={[{ variant: 'primary', text: 'Contact Me', href: '/contact' }]}
  />
</Layout>
